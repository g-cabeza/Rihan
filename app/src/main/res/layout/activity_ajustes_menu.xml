<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjustesMenu">

    <TextView
        android:id="@+id/textView29"
        android:layout_width="414dp"
        android:layout_height="56dp"
        android:background="@color/teal_700"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="40sp"
        android:paddingTop="10sp"
        android:text="@string/tvAjuste"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="406dp"
        android:layout_height="666dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_PerfilUsuario"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="40dp"
                android:background="@color/Gris200"
                android:drawableLeft="@drawable/persona"
                android:onClick="AjustesMenu"
                android:paddingTop="15sp"
                android:text="@string/Perfil"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/crearbasededatos"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/Gris200"
                android:minHeight="48dp"
                android:onClick="AjustesMenu"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="@string/CrearBD"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cargarbasededatos"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/Gris200"
                android:minHeight="48dp"
                android:onClick="AjustesMenu"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="@string/CargarBD"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView69"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/Gris200"
                android:minHeight="48dp"
                android:onClick="AjustesMenu"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="@string/BorrarBD"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView104"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/Gris200"
                android:onClick="AjustesMenu"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="@string/ConsultarBD"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView114"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:onClick="AjustesMenu"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/atras"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>